<view class="detailPic">
  <image src="{{serverImg}}{{foodDetail.newpic}} "></image>
</view>
<view class="messageBlock">
  <view class="Message">
    <view class="detailMessage">
      <text class="name">{{foodDetail.title}} </text>
      <text class="monthsell">{{foodDetail.sale_content}}</text>
      <text class="price">{{foodDetail.course_price}} <text>{{foodDetail.course_price}}</text></text>
    </view>
    <view class="addReduce">
      <text class="iconfont icon-reduce" bindtap="reduce"></text>
      <text class="orderNum"> {{num}} </text>
      <text class="iconfont icon-add" bindtap="add"></text>
    </view>
  </view>
  <view class="otherMessage">
    <view class="S_M">
      商品信息
    </view>
    <view>
     {{foodDetail.content}}
    </view>
  </view>
</view>

