<view class="Block" wx:if="{{block}}">
  <view class="total">
    <view class="title">
      <text>招牌手撕鸡饭套餐</text>
      <text class="iconfont icon-close" bindtap="close"></text>
    </view>
    <view class="type">
      口味
    </view>
    <view class="chooseType">
      <view wx:for="{{arr}}" class="{{index==foodtype?'active':''}}" data-id="{{index}}" bindtap="resetNum">{{item.value}}</view>
    </view>
    <view class="num">数量</view>
    <view class="add2">
      <text class="iconfont icon-add" data-id="{{item.id}}" data-category_id='{{item.category_id}}' bindtap="add"></text>
      <text class="chooseNum"> {{num}} </text>
      <text class="iconfont icon-reduce" data-id="{{item.id}}" data-category_id='{{item.category_id}}' bindtap="reduce"></text>
    </view>
    <view class="ok" bindtap="submit">
      确定
    </view>
  </view>
</view>